<section class="jumbotron">
    <h1>Eat da Burger</h1>
    <br>
    <br>
    <div class="row">
        <div class="col-md-5">
            <h3>List of fresh burgers</h3>
            <ul>
                {{#each burgers}} {{/each}}
            </ul>
        </div>
        <div class="col-md-2"></div>
        <div class="col-md-5">
            <h3>All of the eaten burgers</h3>
            <ul>
                {{#each devouredBurgers}} {{/each}}
            </ul>
        </div>
    </div>
</section>
<section class="jumbotron">
    <h2>CREATE YOUR OWN BURGER!!!</h2>
    <form class="create-form">
        <div class="form-group">
            <label for="userBurger">Burger Name</label>
            <input type="text" id="userBurger" name="burgerName">
        </div>
        <button type="submit" class="btn btn-danger">Add burger!</button>
    </form>
</section>